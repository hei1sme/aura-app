{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Aura",
  "version": "1.2.3",
  "identifier": "com.aura.wellness",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Aura - Session Hub",
        "label": "session",
        "url": "/session",
        "width": 400,
        "height": 510,
        "minWidth": 350,
        "minHeight": 350,
        "resizable": false,
        "transparent": false,
        "decorations": true,
        "center": true,
        "visible": true
      },
      {
        "title": "Aura - Wellness Companion",
        "label": "main",
        "url": "/",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "transparent": false,
        "decorations": true,
        "center": true,
        "visible": false
      },
      {
        "title": "",
        "label": "overlay",
        "url": "/overlay",
        "width": 450,
        "height": 550,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false,
        "resizable": false,
        "skipTaskbar": true,
        "visible": false,
        "focus": true,
        "center": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "aura-sidecar"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}