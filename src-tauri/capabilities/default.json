{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for all windows",
  "windows": [
    "main",
    "overlay",
    "session"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:event:default",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/aura-sidecar",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/aura-engine",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "shell:allow-kill",
    "shell:allow-stdin-write"
  ]
}